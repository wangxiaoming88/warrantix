<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wx_secondary_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:background="@color/wx_primary_color"
        android:layout_height="@dimen/_100sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/products_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2.3"
                android:layout_height="0dp">

                    <TextView
                        android:id="@+id/name"
                        android:text="dfgdsgfdgf"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/wx_accent_color"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">

                    <TextView
                        android:id="@+id/name1"
                        android:text="gsga"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/manualsLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="0dp">

                    <TextView
                        android:id="@+id/name2"
                        android:text="gsga"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
