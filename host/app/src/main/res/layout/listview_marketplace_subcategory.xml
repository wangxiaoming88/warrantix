<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wx_secondary_color"
    android:orientation="horizontal" >

    <com.warrantix.main.customview.UnPressableLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_marginBottom="@dimen/control_space_margin_small"
        android:background="@color/wx_primary_color"
        android:layout_height="@dimen/_120sdp">

        <LinearLayout
            android:id="@+id/product_list_lyout1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/products_image"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="@dimen/control_space_margin_medium"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/product_list_lyout2"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/wx_tag_color"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:textColor="@color/wx_list_text_color"
                    android:layout_weight="0.6"
                    android:textSize="@dimen/_11sdp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:textColor="@color/wx_tag_color"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="0dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/products_service"
                        android:textAllCaps="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        style="@style/DefaultButtonRed"
                        android:drawableLeft="@drawable/check_small"
                        android:textColor="@drawable/accent_button_textcolor_red"
                        android:text=" We Own"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/shopBTN"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawableLeft="@drawable/get"
                            android:layout_gravity="left|center_vertical"
                            android:background="@drawable/stroke_round_accent_button_selector_red"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/socialButton"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="left|center_vertical"
                            android:layout_centerInParent="true"
                            android:src="@drawable/red_vertical_menu"
                            android:scaleType="fitCenter"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_30sdp" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </com.warrantix.main.customview.UnPressableLinearLayout>
</LinearLayout>
