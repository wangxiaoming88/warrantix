<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/wx_primary_color"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lblTitleInMessageDialog"
        style="@style/BoldEdit"
        android:layout_marginTop="@dimen/control_space_margin_medium"
        android:layout_centerHorizontal="true"
        android:text=""
        android:layout_gravity="center"
        android:textColor="@color/wx_accent_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/dividerInMessageDialog"
        android:layout_below="@id/lblTitleInMessageDialog"
        android:background="@color/wx_third_color"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/control_space_margin_small"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/lblMessageInMessageDialog"
        style="@style/MessageViewStyle"
        android:textColor="@color/wx_text_color"
        android:layout_below="@id/dividerInMessageDialog"
        android:layout_marginTop="@dimen/control_space_margin_medium"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnOkInMessageDialog"
        style="@style/DefaultButton"
        android:textColor="@drawable/accent_button_textcolor"
        android:text="OK"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/control_space_margin_medium"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblMessageInMessageDialog"
        android:layout_width="@dimen/_120sdp" />
</LinearLayout>
