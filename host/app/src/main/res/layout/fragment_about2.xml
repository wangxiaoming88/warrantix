<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/wx_primary_color"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp">
            <ImageView
                android:src="@drawable/about2_warrantix_brand"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:id="@+id/rebates_TEXT"
                android:gravity="center"
                android:text="Warrantix lets you organize Apps of your favourite Brands, Retailers &amp; Other Service Providers within its Wallet Launcher. Using our App-in-a-App Technology."
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/wx_hint_color"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
