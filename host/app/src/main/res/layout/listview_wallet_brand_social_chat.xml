<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wx_secondary_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:background="@color/wx_primary_color"
        android:layout_height="@dimen/_70sdp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/products_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/person1"
                android:layout_height="@dimen/_50sdp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4.2"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_marginRight="@dimen/_60sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_marginTop="@dimen/control_space_margin_small"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/wx_enthusiastic_color"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/type"
                    android:layout_below="@id/name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:textColor="@color/wx_tag_color"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/days"
                android:layout_width="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical|right"
                android:textColor="@color/wx_list_text_color"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/chatmessage"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/relativelayout1"
                android:layout_width="match_parent"
                android:textColor="@color/wx_title_color"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/messageCount"
                android:background="@drawable/red_circle"
                android:text=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_below="@id/relativelayout1"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/wx_primary_color"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
