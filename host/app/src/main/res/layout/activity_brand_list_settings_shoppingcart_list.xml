<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wx_secondary_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@color/wx_primary_color"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_marginBottom="@dimen/control_space_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/control_space_margin_small"
            android:orientation="horizontal"
            android:background="@color/wx_primary_color"
            android:layout_height="@dimen/_190sdp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/products_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="0dp">
                            <TextView
                                android:id="@+id/name1"
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/wx_accent_color"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingPrefix" />
                            <TextView
                                android:id="@+id/name2"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/wx_list_text_color"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="0dp">

                            <TextView
                                android:id="@+id/price1"
                                android:textSize="@dimen/_13sdp"
                                fontPath="fonts/Montserrat-Bold.otf"
                                android:textColor="@color/wx_accent_color"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingPrefix" />
                            <TextView
                                android:id="@+id/price2"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/wx_tag_color"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingPrefix" />


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/control_space_margin_small"
                            android:layout_weight="3"
                            android:orientation="horizontal"
                            android:layout_height="0dp">
                            <ImageButton
                                android:id="@+id/down_arrowBTN"
                                android:src="@drawable/arrow_left"
                                android:background="@null"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/number"
                                android:text="1"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/wx_tag_color"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <ImageButton
                                android:id="@+id/up_arrowBTN"
                                android:src="@drawable/arrow_right"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:gravity="right"
                                android:layout_height="match_parent">
                            </LinearLayout>
                            <View
                                android:background="@color/wx_tag_color"
                                android:layout_weight="1.4"
                                android:layout_width="0dp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:layout_height="@dimen/_1sdp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:orientation="horizontal"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="10"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageButton
                                        android:layout_gravity="center_vertical"
                                        android:background="@drawable/circle_delete_button_selector"
                                        android:textSize="@dimen/_11sdp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp" />

                                </RelativeLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="match_parent">
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:orientation="horizontal"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="match_parent">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="10"
                                android:layout_height="match_parent">
                                <Button
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/saveBTN"
                                    style="@style/DefaultButton"
                                    android:textColor="@drawable/accent_button_textcolor"
                                    android:text=" SAVE FOR LATER"
                                    android:textSize="@dimen/_11sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="match_parent">
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
