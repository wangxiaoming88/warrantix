<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/wx_secondary_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/brand_list_transerwarrantyBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="12"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/brand_arrow"
                style="@style/DefaultBackButtonStyle"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:text="@string/transferwarranty_big"
                android:layout_marginLeft="@dimen/control_space_margin_tiny"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/wx_tag_color"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/control_space_margin_small"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/brand_list_transerwarrantyBar"
        android:id="@+id/cardViewInProofPurchase">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:background="@drawable/transfer_circle_color"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp" />
            <ImageView
                android:background="@drawable/transfer_retangle"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_4sdp" />
            <ImageView
                android:background="@drawable/transfer_circle_white"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/control_space_margin_small"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_marginBottom="@dimen/control_space_margin_small"
        android:layout_below="@id/cardViewInProofPurchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView1InProofPurchase">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginTop="@dimen/control_space_margin_medium"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/brandTXT"
                    style="@style/Heading3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/brand"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/wx_text_color"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
                <EditText
                    android:id="@+id/brand_edit"
                    android:hint="My Brand name : (Read only)"
                    android:layout_gravity="center_vertical"
                    style="@style/RegularEdit"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColorHint="@color/wx_hint_color"
                    android:paddingRight="@dimen/control_space_margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/control_space_margin_medium"
                android:gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/productnameTXT"
                    style="@style/Heading3"
                    android:text="@string/productname"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/wx_text_color"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
                <EditText
                    android:id="@+id/productname_edit"
                    android:hint="My Product Name : (Read only)"
                    android:layout_gravity="center_vertical"
                    style="@style/RegularEdit"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColorHint="@color/wx_hint_color"
                    android:paddingRight="@dimen/control_space_margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/control_space_margin_medium"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/modelnoTXT"
                    style="@style/Heading3"
                    android:text="@string/modelno"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/wx_text_color"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
                <EditText
                    android:id="@+id/model_edit"
                    android:hint="Model Number : (Read only)"
                    android:layout_gravity="center_vertical"
                    style="@style/RegularEdit"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColorHint="@color/wx_hint_color"
                    android:paddingRight="@dimen/control_space_margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/control_space_margin_medium"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/purchasedateTXT"
                    style="@style/Heading3"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/purchasedate"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/wx_text_color"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
                <EditText
                    android:id="@+id/purchasedate_edit"
                    android:hint="dd/mm/yy"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/calculator"
                    style="@style/RegularEdit"
                    android:focusable="false"
                    android:textColorHint="@color/wx_hint_color"
                    android:paddingRight="@dimen/control_space_margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/control_space_margin_medium"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/warrantyvalidityTXT"
                    style="@style/Heading3"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/warrantyvalidity"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/wx_text_color"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
                <EditText
                    android:id="@+id/warrantyvalidity_edit"
                    android:hint="Warranty Validity : (Read only)"
                    android:layout_gravity="center_vertical"
                    style="@style/RegularEdit"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColorHint="@color/wx_hint_color"
                    android:paddingRight="@dimen/control_space_margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_height="@dimen/_70sdp">
                <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/nextBTN"
                    style="@style/DefaultButton"
                    android:textColor="@drawable/accent_button_textcolor"
                    android:text=" NEXT"
                    android:layout_width="@dimen/_140sdp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
