<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/wx_secondary_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/walletid_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="12"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/brand_arrow"
                style="@style/DefaultBackButtonStyle"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="ADD DEVICE TO CUSTOMER ID"
                android:layout_marginLeft="@dimen/control_space_margin_tiny"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/wx_tag_color"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="@dimen/control_space_margin_small"
            android:layout_marginRight="@dimen/control_space_margin_small"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/walletID"
                android:layout_width="match_parent"
                android:text="@string/WALLET_ID"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/control_space_margin_small"
                android:layout_marginLeft="@dimen/control_space_margin_small"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/wx_tag_color"
                android:layout_height="@dimen/_25sdp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/walletID"
                android:id="@+id/cardViewInProofPurchase">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        style="@style/Heading3"
                        android:textColor="@color/wx_title_color"
                        android:text="Wallet ID"
                        android:layout_marginTop="@dimen/control_space_margin_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/walletIDTxt"
                        style="@style/RegularEdit"
                        android:textColorHint="@color/wx_hint_color"
                        android:paddingRight="@dimen/control_space_margin_large"
                        android:hint="Enter Wallet ID"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        style="@style/Heading3"
                        android:textColor="@color/wx_title_color"
                        android:text="Customer ID"
                        android:layout_marginTop="@dimen/control_space_margin_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/modelNumberTxt"
                        style="@style/RegularEdit"
                        android:textColorHint="@color/wx_hint_color"
                        android:focusable="false"
                        android:clickable="false"
                        android:paddingRight="@dimen/control_space_margin_large"
                        android:layout_marginBottom="@dimen/control_space_margin_small"
                        android:hint="Enter Customer ID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="GENERAL INFORMATION"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/control_space_margin_small"
                android:layout_marginLeft="@dimen/control_space_margin_small"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/wx_tag_color"
                android:layout_height="@dimen/_25sdp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/walletID">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        style="@style/Heading3"
                        android:textColor="@color/wx_title_color"
                        android:text="Name"
                        android:layout_marginTop="@dimen/control_space_margin_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/nameTxt"
                        style="@style/RegularEdit"
                        android:textColorHint="@color/wx_hint_color"
                        android:paddingRight="@dimen/control_space_margin_large"
                        android:hint="Customer Name"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        style="@style/Heading3"
                        android:textColor="@color/wx_title_color"
                        android:text="Mobile No."
                        android:layout_marginTop="@dimen/control_space_margin_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/mobileNumberTxt"
                        style="@style/RegularEdit"
                        android:textColorHint="@color/wx_hint_color"
                        android:paddingRight="@dimen/control_space_margin_large"
                        android:hint="Enter Customer Mobile No."
                        android:inputType="number|none"
                        android:digits="0123456789"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        style="@style/Heading3"
                        android:textColor="@color/wx_title_color"
                        android:text="Email Address"
                        android:layout_marginTop="@dimen/control_space_margin_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/mailAddressTxt"
                        style="@style/RegularEdit"
                        android:textColorHint="@color/wx_hint_color"
                        android:paddingRight="@dimen/control_space_margin_large"
                        android:hint="Email Address"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.5"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_height="@dimen/_70sdp">
                        <Button
                            android:layout_gravity="center_vertical"
                            android:id="@+id/doneBTN"
                            style="@style/DefaultButton"
                            android:textColor="@drawable/accent_button_textcolor"
                            android:text="DONE"
                            android:layout_width="@dimen/_140sdp"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>




</LinearLayout>
