<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/wx_primary_color"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp">
            <ImageView
                android:background="@drawable/about1_warrantix_brand"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:id="@+id/warrantix_help_TEXT"
                android:gravity="center"
                android:text="WARRANTIX HELPS YOU MANAGE POST-PURCHASE ACTIVITY FOR ALL PRODUCTS YOU OWN."
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/wx_hint_color"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/control_space_margin_small"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="center"
                android:id="@+id/rebates_TEXT"
                android:text="Rebates, Returns, Repair, Renew, Record, Recall, Resell, Recycle, Research &amp; Replace"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/wx_hint_color"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
