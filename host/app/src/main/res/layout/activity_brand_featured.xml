<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:background="@color/wx_secondary_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewInProductDetail">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:background="@drawable/banner"
                            android:layout_height="match_parent" />

                        <ImageButton
                            android:id="@+id/brand_arrow"
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_37sdp"
                            android:src="@drawable/back_white"
                            android:background="@null">
                        </ImageButton>

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="@dimen/_100sdp"
                            android:text="@string/FEATURED"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:layout_marginLeft="@dimen/_36sdp"
                            android:gravity="left"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@android:color/white"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/brand_featured_go"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:visibility="gone"
                            android:background="@drawable/hero_whitelogo"
                            android:layout_height="@dimen/_23sdp" />
                    </FrameLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/control_space_margin_small"
                android:layout_marginLeft="@dimen/control_space_margin_small"
                android:layout_marginRight="@dimen/control_space_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardViewInProductDetail"
                android:id="@+id/cardView1InProductDetail">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_height="@dimen/_250sdp">

                    <TextView
                        android:id="@+id/featured_name"
                        android:layout_width="match_parent"
                        android:layout_weight="0.9"
                        android:text="@string/Karizma"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.7"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/featured_price"
                            android:layout_width="wrap_content"
                            android:text="$1,20,000"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/wx_enthusiastic_color"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:text="@string/Exshowroomprice"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/wx_list_text_color"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="0dp">
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.02"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@android:color/darker_gray">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_height="0dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <TextView
                                    android:id="@+id/revealTXT"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Reveal"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/wx_tag_color"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <ImageButton
                                    android:id="@+id/revealBTN"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/reveal"
                                    android:layout_height="@dimen/_13sdp" />
                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.01"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@android:color/darker_gray">
                        </View>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <TextView
                                    android:id="@+id/referTXT"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Refer"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/wx_tag_color"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <ImageButton
                                    android:id="@+id/referBTN"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/refer"
                                    android:layout_height="@dimen/_16sdp" />
                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.01"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@android:color/darker_gray">
                        </View>



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <TextView
                                    android:id="@+id/reviewTXT"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Review"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/wx_tag_color"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <ImageButton
                                    android:id="@+id/reviewBTN"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/review"
                                    android:layout_height="@dimen/_18sdp" />
                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.01"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@android:color/darker_gray">
                        </View>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <TextView
                                    android:id="@+id/rankTXT"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Rank"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/wx_tag_color"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <ImageButton
                                    android:id="@+id/rankBTN"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/rank"
                                    android:layout_height="@dimen/_17sdp" />
                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.01"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@android:color/darker_gray">
                        </View>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <TextView
                                    android:id="@+id/chatTXT"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Chat"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/wx_tag_color"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal"
                                android:layout_height="0dp">
                                <ImageButton
                                    android:id="@+id/chatBTN"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/chat_deal"
                                    android:layout_height="@dimen/_16sdp" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.02"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@android:color/darker_gray">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.3"
                        android:layout_height="0dp">
                    </LinearLayout>


                    <TextView
                        android:id="@+id/featured_description"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:maxLines="5"
                        android:singleLine="false"
                        android:text="@string/featured_explain"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/wx_list_text_color"
                        android:layout_height="0dp" />


                    <TextView
                        android:id="@+id/readmore"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Readmore"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/wx_enthusiastic_color"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.4"
                        android:layout_height="0dp">
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_below="@id/cardView1InProductDetail"
                android:id="@+id/salientfeatured"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="@string/SALIENT_FEATURES"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/wx_tag_color"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/control_space_margin_small"
                android:layout_marginBottom="@dimen/control_space_margin_small"
                android:layout_marginLeft="@dimen/control_space_margin_small"
                android:layout_marginRight="@dimen/control_space_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/salientfeatured"
                android:id="@+id/cardView2InProductDetail">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_height="@dimen/_230sdp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/salient_features_banner"
                            android:layout_height="@dimen/_170sdp" />

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginBottom="@dimen/_46sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:background="@drawable/printer"
                            android:layout_height="@dimen/_14sdp" />
                    </FrameLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/_40sdp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="match_parent">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_width="@dimen/_33sdp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/brand_featured_salient_image1"
                                android:layout_height="@dimen/_31sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="match_parent">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_width="@dimen/_34sdp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/brand_featured_salient_image2"
                                android:layout_height="@dimen/_31sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="match_parent">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_width="@dimen/_34sdp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/brand_featured_salient_image3"
                                android:layout_height="@dimen/_31sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="match_parent">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_width="@dimen/_32sdp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/brand_featured_salient_image4"
                                android:layout_height="@dimen/_31sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="match_parent">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_width="@dimen/_34sdp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/brand_featured_salient_image5"
                                android:layout_height="@dimen/_31sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="match_parent">

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
