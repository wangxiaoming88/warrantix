<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wx_secondary_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@color/wx_primary_color"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/control_space_margin_small"
            android:layout_marginRight="@dimen/control_space_margin_small"
            android:layout_marginTop="@dimen/control_space_margin_small"
            android:layout_marginBottom="@dimen/control_space_margin_small"
            android:background="@android:color/white"
            android:layout_height="@dimen/_100sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/products_image"
                    android:layout_width="@dimen/_50sdp"
                    android:background="@drawable/person1"
                    android:layout_height="@dimen/_50sdp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.4"
                    android:layout_height="0dp">

                </LinearLayout>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/wx_enthusiastic_color"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:textColor="@color/wx_title_color"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:layout_height="0dp">
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_height="0dp">

                    <ImageButton
                        android:id="@+id/brand_insurance_call"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/call_button_selector"
                        android:layout_width="@dimen/_33sdp"
                        android:layout_height="@dimen/_33sdp" />

                    <ImageButton
                        android:id="@+id/brand_insurance_chat"
                        android:background="@drawable/chaticon_button_selector"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/_33sdp"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_height="@dimen/_33sdp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:layout_height="0dp">
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.4"
                    android:layout_height="0dp">

                </LinearLayout>

                <TextView
                    android:id="@+id/days"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/wx_list_text_color"
                    android:layout_height="0dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="3.6"
                    android:layout_height="0dp">

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
