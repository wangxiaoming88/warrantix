<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/wx_secondary_color"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/reveal_doneBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="12"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/brand_arrow"
                style="@style/DefaultBackButtonStyle"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="@string/Reveal_big"
                android:layout_marginLeft="@dimen/control_space_margin_tiny"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/wx_tag_color"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"></LinearLayout>

            <ImageView
                android:id="@+id/brand_hero"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:src="@drawable/hero">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/salientfeatured"
        android:layout_width="match_parent"
        android:text="@string/Reveal_big_explain"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_13sdp"
        android:layout_below="@id/reveal_doneBar"
        android:textColor="@color/wx_tag_color"
        android:layout_height="@dimen/_25sdp" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/control_space_margin_medium"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/salientfeatured"
        android:id="@+id/cardViewInProofPurchase">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_height="@dimen/_35sdp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/selectproductTXT"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_width="wrap_content"
                            android:hint="Hero Karizma ZMR"
                            android:textColorHint="@color/wx_tag_color"
                            android:shadowColor="@color/wx_tag_color"
                            android:textSize="@dimen/_12sdp"
                            android:background="@null"
                            android:textColor="@color/wx_tag_color"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/check"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@color/wx_tag_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_height="@dimen/_35sdp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/addrecipientsTXT"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_width="wrap_content"
                            android:hint="@string/add_more_recipicients"
                            android:textColorHint="@color/wx_tag_color"
                            android:shadowColor="@color/wx_tag_color"
                            android:textSize="@dimen/_12sdp"
                            android:background="@null"
                            android:textColor="@color/wx_tag_color"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/plus"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@color/wx_tag_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>






                <ListView
                    android:id="@+id/list"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:dividerHeight="@dimen/_1sdp"
                    android:background="@android:color/white"
                    android:divider="@android:color/white"
                    android:layout_height="wrap_content" >
                </ListView>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="@dimen/_50sdp">
                    <Button
                        android:layout_gravity="top"
                        android:id="@+id/doneBTN"
                        style="@style/DefaultButtonRed"
                        android:textColor="@drawable/accent_button_textcolor_red"
                        android:text=" DONE"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_30sdp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>








</RelativeLayout>
