<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wx_secondary_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:background="@color/wx_primary_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/control_space_margin_small"
            android:layout_marginRight="@dimen/control_space_margin_small"
            android:layout_marginTop="@dimen/control_space_margin_small"
            android:layout_marginBottom="@dimen/control_space_margin_small"
            android:background="@android:color/white"
            android:layout_height="@dimen/_180sdp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/products_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:gravity="center_horizontal"
                        android:layout_height="match_parent">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="0dp">

                            <LinearLayout
                                android:layout_weight="1.7"
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:id="@+id/days"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1.2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:id="@+id/name"
                                    android:textSize="@dimen/_14sdp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/wx_accent_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="2.2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:id="@+id/name1"
                                    android:lines="2"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/wx_fourth_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/name2"
                        android:lines="5"
                        android:text="@string/featured_explain"
                        android:textSize="@dimen/_11sdp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/wx_tag_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
