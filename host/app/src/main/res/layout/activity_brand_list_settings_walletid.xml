<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/wx_secondary_color"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/walletid_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="12"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/brand_arrow"
                style="@style/DefaultBackButtonStyle"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="@string/WALLET_ID"
                android:layout_marginLeft="@dimen/control_space_margin_tiny"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/wx_tag_color"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"></LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/walletid_bar"
        android:background="@color/wx_secondary_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginLeft="@dimen/control_space_margin_small"
            android:layout_marginRight="@dimen/control_space_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/walletID"
                android:layout_width="match_parent"
                android:text="@string/WALLET_ID"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/control_space_margin_small"
                android:paddingLeft="@dimen/control_space_margin_small"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/wx_tag_color"
                android:layout_height="@dimen/_25sdp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/walletID"
                android:id="@+id/cardViewInProofPurchase">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="@dimen/control_space_margin_small"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="@dimen/control_space_margin_tiny"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/customerID_edit"
                                style="@style/RegularEdit"
                                android:textSize="@dimen/tiny_font_height"
                                android:focusable="false"
                                android:clickable="false"
                                android:textColor="@color/wx_list_text_color"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:hint="@string/XXXX"/>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_marginTop="@dimen/control_space_margin_medium"
                android:id="@+id/walletID_lyout1"
                android:orientation="vertical"
                android:layout_below="@id/cardViewInProofPurchase"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/familymember1"
                        android:layout_width="wrap_content"
                        android:text="@string/FAMILY_MEMBER"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/control_space_margin_small"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/familymember1_txt"
                        android:layout_width="wrap_content"
                        android:text="1"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/wx_list_text_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/customerid1"
                        android:layout_width="wrap_content"
                        android:text="@string/CUSTOMER_ID"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/control_space_margin_small"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/customerid1_TXT"
                        android:layout_width="wrap_content"
                        android:text="@string/XXXX1"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/control_space_margin_small"
                android:layout_below="@id/walletID_lyout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView1InProofPurchase">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="@dimen/_45sdp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/mobilephone1_check"
                                    android:layout_marginLeft="@dimen/_17sdp"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:clickable="true"
                                    android:background="@drawable/square"
                                    android:layout_height="@dimen/_20sdp" />
                                <TextView
                                    android:id="@+id/mobilephone1"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Mobile_Phone1"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:id="@+id/mobilephone1_number"
                                    android:layout_width="wrap_content"
                                    android:text="@string/phoneNumber"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="@dimen/_45sdp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/mobilephone2_check"
                                    android:layout_marginLeft="@dimen/_17sdp"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/square"
                                    android:clickable="true"
                                    android:layout_height="@dimen/_20sdp" />
                                <TextView
                                    android:id="@+id/mobilephone2"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Mobile_Phone2"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:id="@+id/mobilephone2_number"
                                    android:layout_width="wrap_content"
                                    android:text="@string/phoneNumber"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="@dimen/_45sdp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/tablet_check"
                                    android:layout_marginLeft="@dimen/_17sdp"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/square"
                                    android:clickable="true"
                                    android:layout_height="@dimen/_20sdp" />
                                <TextView
                                    android:id="@+id/tablet"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Tablet"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:id="@+id/tablet_number"
                                    android:layout_width="wrap_content"
                                    android:text="@string/phoneNumber"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_height="@dimen/_45sdp">
                        <RelativeLayout
                            android:id="@+id/btnSetting1"
                            android:clickable="true"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginRight="@dimen/_15sdp"
                                android:background="@drawable/setting"
                                android:layout_gravity="center_vertical"
                                android:layout_centerInParent="true"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_marginTop="@dimen/control_space_margin_medium"
                android:id="@+id/walletID_lyout2"
                android:orientation="vertical"
                android:layout_below="@id/cardView1InProofPurchase"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/familymember2"
                        android:layout_width="wrap_content"
                        android:text="@string/FAMILY_MEMBER"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/control_space_margin_small"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/familymember2_txt"
                        android:layout_width="wrap_content"
                        android:text="2"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/wx_list_text_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/customerid2"
                        android:layout_width="wrap_content"
                        android:text="@string/CUSTOMER_ID"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/control_space_margin_small"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/customerid2_TXT"
                        android:layout_width="wrap_content"
                        android:text="@string/XXXX1"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/wx_tag_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/control_space_margin_small"
                android:layout_below="@id/walletID_lyout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView1InProofPurchase2">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="@dimen/_45sdp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/mobilephone1_check2"
                                    android:layout_marginLeft="@dimen/_17sdp"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/square"
                                    android:clickable="true"
                                    android:layout_height="@dimen/_20sdp" />
                                <TextView
                                    android:id="@+id/mobilephone1_2"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Mobile_Phone1"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:id="@+id/mobilephone1_number2"
                                    android:layout_width="wrap_content"
                                    android:text="@string/phoneNumber"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="@dimen/_45sdp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/mobilephone2_check2"
                                    android:layout_marginLeft="@dimen/_17sdp"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:clickable="true"
                                    android:background="@drawable/square"
                                    android:layout_height="@dimen/_20sdp" />
                                <TextView
                                    android:id="@+id/mobilephone2_2"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:text="@string/Mobile_Phone2"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:id="@+id/mobilephone2_number2"
                                    android:layout_width="wrap_content"
                                    android:text="@string/phoneNumber"
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/wx_list_text_color"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_height="@dimen/_45sdp">
                            <RelativeLayout
                                android:id="@+id/btnSetting2"
                                android:clickable="true"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:background="@drawable/setting"
                                    android:layout_gravity="center_vertical"
                                    android:layout_centerInParent="true"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp" />
                            </RelativeLayout>
                        </LinearLayout>




                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/control_space_margin_small"
                android:layout_marginBottom="@dimen/control_space_margin_small"
                android:layout_below="@id/cardView1InProofPurchase2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView1InProofPurchase3">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp">
                        <Button
                            android:layout_gravity="center_vertical"
                            android:id="@+id/addCustomerIDBTN"
                            style="@style/DefaultButton"
                            android:textColor="@drawable/accent_button_textcolor"
                            android:text="@string/ADD_CUSTOMER_ID"
                            android:layout_width="@dimen/_140sdp"/>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
