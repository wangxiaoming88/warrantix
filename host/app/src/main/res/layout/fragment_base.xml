<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_height"
        android:background="@color/wx_third_color"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorColor="@color/wx_accent_color"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorThickness="@dimen/_2sdp"
        app:stl_indicatorCornerRadius="1dp"
        app:stl_overlineThickness="0dp"
        app:stl_dividerThickness="0dp"
        app:stl_underlineThickness="0dp"
        app:stl_underlineColor="@color/wx_third_color"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@color/wx_text_color"
        app:stl_defaultTabTextSize="@dimen/tiny_font_height"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="120dp"
        app:stl_distributeEvenly="true"
        app:stl_clickable="true"
        fontpath="fonts/Montserrat-Regular.ttf"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewpagertab"
        />
</LinearLayout>
